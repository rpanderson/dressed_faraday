@article{derevianko_theory_2010,
	title = {Theory of magic optical traps for {Zeeman}-insensitive clock transitions in alkali-metal atoms},
	volume = {81},
	url = {http://link.aps.org/doi/10.1103/PhysRevA.81.051606},
